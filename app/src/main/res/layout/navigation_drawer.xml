<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="307dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_username"
        style="@style/nanum_regular_login_textview"
        android:textSize="36sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="72dp"
        android:text="이인하"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_email"
        style="@style/nanum_regular_login_textview"
        android:textSize="14sp"
        android:text="reduction59@naver.com"
        app:layout_constraintStart_toStartOf="@+id/tv_username"
        app:layout_constraintTop_toBottomOf="@+id/tv_username" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_username"
        app:layout_constraintStart_toEndOf="@+id/tv_username"
        app:srcCompat="@drawable/ham_right" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_email"
        tools:layout_editor_absoluteX="0dp"
        android:background="@drawable/bg_navigation_score">

        <TextView
            android:id="@+id/textView17"
            style="@style/nanum_regular_login_textview"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="기여도" />

        <TextView
            android:id="@+id/tv_score"
            style="@style/nanum_regular_login_textview"
            android:textSize="36sp"
            android:textColor="@color/white"
            android:text="5350"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/textView26"
            style="@style/nanum_semibold_login_textview"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="점" />

        <Button
            android:id="@+id/bt_exchange"
            android:layout_width="96dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:text="상품권으로 교환"
            style="@style/nanum_semibold_login_textview"
            android:textSize="10sp"
            android:textColor="@color/blue"
            android:background="@drawable/bg_navigation_score_button"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <RelativeLayout
            android:id="@+id/rl_my_pin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="32dp"
            tools:layout_editor_absoluteX="9dp"
            android:background="?attr/selectableItemBackground">

            <TextView
                style="@style/nanum_regular_login_textview"
                android:layout_marginTop="24dp"
                android:text="내가 등록한 핀"
                android:textSize="14sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_call_taxi"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="32dp"
            tools:layout_editor_absoluteX="9dp">

            <TextView
                style="@style/nanum_regular_login_textview"
                android:layout_centerVertical="true"
                android:text="장애인 콜택시 전화연결"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_supporter"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="32dp"
            tools:layout_editor_absoluteX="9dp">

            <TextView
                style="@style/nanum_regular_login_textview"
                android:layout_centerVertical="true"
                android:text="장애인 지원단체"
                android:textSize="14sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c2c2c2"/>

        <RelativeLayout
            android:id="@+id/rl_use_info"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="32dp"
            tools:layout_editor_absoluteX="9dp">

            <TextView
                style="@style/nanum_regular_login_textview"
                android:layout_marginTop="24dp"
                android:text="이용안내"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_center"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="32dp"
            tools:layout_editor_absoluteX="9dp">

            <TextView
                style="@style/nanum_regular_login_textview"
                android:layout_centerVertical="true"
                android:text="고객센터"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_setting"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="32dp"
            tools:layout_editor_absoluteX="9dp">

            <TextView
                style="@style/nanum_regular_login_textview"
                android:layout_centerVertical="true"
                android:text="설정"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>