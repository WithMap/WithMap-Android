<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="nanum_semibold_login_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nanum_barun_gothic_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="nanum_medium_login_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nanum_barun_gothic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="nanum_semibold_login_edittext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:fontFamily">@font/nanum_barun_gothic_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textCursorDrawable">@drawable/drawable_cursor</item>
        <item name="android:colorAccent">@color/blue</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColorHint">@color/et_text_gray</item>
    </style>
    <style name="nanum_medium_login_edittext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:fontFamily">@font/nanum_barun_gothic</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textCursorDrawable">@drawable/drawable_cursor</item>
        <item name="android:colorAccent">@color/blue</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColorHint">@color/et_text_gray</item>
    </style>

    <style name="nanum_semibold_bottom_button" parent="nanum_semibold_login_textview">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>
